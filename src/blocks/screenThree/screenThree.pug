                        //- label(for="industry")
                    .screenThree__form-region
                        p.screenThree__form-region-title.screenThree__title-fonts|Регион
                        input.screenThree__form-inputRegion.styleLabel(type="text" id="region" name="region" placeholder="Все регионы")
                        use.screenThree__svgRegionArrow-wrap
                            <svg class="screenThree__svgRegionArrow" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 451.846 451.847" style="enable-background:new 0 0 451.846 451.847;" xml:space="preserve">
