                        input.screenThree__form-inputKeyword(type="text" id="keyword" name="keyword" placeholder="например: говядина")
                    .screenThree__form-industry
                        p.screenThree__form-industry-title.screenThree__title-fonts|Отрасль
                        input.screenThree__form-inputIndustry.styleLabel(type="text" id="industry" name="industry" placeholder="Все отрасли")
